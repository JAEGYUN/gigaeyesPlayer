<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_back3"
        />

    <ImageButton
        android:id="@+id/btn_onoff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ico_cameraoff"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btn_back"
        />


    <TextView
        android:id="@+id/camName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Hello"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/btn_star"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ico_star"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        />

    <ImageButton
        android:id="@+id/btn_capture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ico_capture"
        android:scaleType="centerCrop"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btn_star"
        />

    <ImageButton
        android:id="@+id/btn_iot"
        android:layout_width="42dp"
        android:layout_height="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/btn_capture"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ico_iot" />

    <ImageButton
        android:id="@+id/btn_va"
        android:layout_width="35dp"
        android:layout_height="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/btn_iot"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ico_va" />

    <SeekBar
        android:id="@+id/brightnessBar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:max="100"
        android:minHeight="10dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="밝기"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_back" />

    <TextView
        android:id="@+id/brightStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/brightnessBar"
        android:layout_toEndOf="@+id/brightnessBar" />

    <SeekBar
        android:id="@+id/volumeBar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:max="100"
        android:minHeight="10dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toStartOf="@+id/btn_capture" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="볼륨"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/brightStatus"
        android:layout_toStartOf="@+id/volumeBar" />

    <TextView
        android:id="@+id/volumeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_star"
        android:layout_alignTop="@+id/volumeBar"
        android:text="0%"
        android:textColor="#ffffff"
        android:layout_toEndOf="@+id/volumeBar" />


</RelativeLayout>
